{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Project",

			// Put the path to your g++ compiler here
			"windows": {
				"command": "C:\\msys64\\mingw64\\bin\\gcc.exe"
			},
			"linux": {
				"command": "/usr/bin/gcc"
			},

			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"viewer.c",
				"Structures/LinkedList/**.c",
				"-o",
				"build/viewer"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}